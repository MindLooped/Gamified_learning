# EcoLearn Backend Environment Configuration

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ecolearn
# For MongoDB Atlas: MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ecolearn

# JWT Configuration
JWT_SECRET=ecolearn-super-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# QR Code Security
QR_SECRET=ecolearn-qr-verification-secret

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3001

# File Upload Configuration
MAX_FILE_SIZE=5000000  # 5MB
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15  # 15 minutes
RATE_LIMIT_MAX=100    # 100 requests per window

# Analytics & Monitoring
ANALYTICS_SECRET=ecolearn-analytics-key

# Push Notifications (optional)
FCM_SERVER_KEY=your-firebase-server-key